<Window x:Class="FeatureFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FeatureFramework"
        Title="Windows Desktop Feature Framework"
        Width="980" Height="620"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left rail -->
        <Border Grid.Column="0" Style="{StaticResource SideRail}">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Feature Framework" Style="{StaticResource TitleText}" Margin="0,0,0,2"/>
                    <TextBlock Text="WPF + MVVM + DI" Style="{StaticResource SubtleText}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top" Margin="0,8,0,0">
                    <Button Content="Home" Command="{Binding GoHomeCommand}" Style="{StaticResource NavButton}" />
                    <Button Content="Settings" Command="{Binding GoSettingsCommand}" Style="{StaticResource NavButton}" />
                </StackPanel>

                <Border DockPanel.Dock="Bottom" Margin="0,16,0,0" Padding="10" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="App Health" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding HealthSummary}" Style="{StaticResource SubtleText}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>

        <!-- Main content -->
        <Border Grid.Column="1" Padding="18">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>
