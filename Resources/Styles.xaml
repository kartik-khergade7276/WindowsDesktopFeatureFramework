<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BrushBg" Color="#FFF7F7FB"/>
    <SolidColorBrush x:Key="BrushRail" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="BrushBorder" Color="#FFE3E3EA"/>
    <SolidColorBrush x:Key="BrushText" Color="#FF1B1B1F"/>
    <SolidColorBrush x:Key="BrushSubtle" Color="#FF5A5A66"/>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BrushBg}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
    </Style>

    <Style x:Key="SideRail" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushRail}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
    </Style>

    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="SubtleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BrushSubtle}"/>
        <Setter Property="FontSize" Value="12.5"/>
    </Style>

    <Style x:Key="NavButton" TargetType="Button">
        <Setter Property="Height" Value="38"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
