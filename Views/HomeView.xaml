<UserControl x:Class="FeatureFramework.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}" Padding="16" Margin="0,0,0,14">
            <StackPanel>
                <TextBlock Text="Home" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Margin="0,6,0,0" Style="{StaticResource SubtleText}"
                           Text="This starter app shows a clean MVVM structure, navigation, logging, and simple performance timing."/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*"/>
                <ColumnDefinition Width="0.9*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Padding="16" Margin="0,0,14,0">
                <StackPanel>
                    <TextBlock Text="Quick Actions" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Button Content="Simulate Feature Work (with timing)" Command="{Binding SimulateWorkCommand}" Height="40" Margin="0,0,0,10"/>
                    <Button Content="Write a log entry" Command="{Binding LogInfoCommand}" Height="40" Margin="0,0,0,10"/>
                    <Button Content="Clear UI logs" Command="{Binding ClearLogsCommand}" Height="40"/>
                    <TextBlock Margin="0,14,0,0" Style="{StaticResource SubtleText}" Text="{Binding LastActionSummary}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}" Padding="16">
                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="Observability" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Style="{StaticResource SubtleText}" Text="UI log feed (also persisted to file)."/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding RecentLogs}" BorderThickness="0" />
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
