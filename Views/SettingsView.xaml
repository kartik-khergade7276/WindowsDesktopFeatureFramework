<UserControl x:Class="FeatureFramework.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}" Padding="16" Margin="0,0,0,14">
            <StackPanel>
                <TextBlock Text="Settings" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Margin="0,6,0,0" Style="{StaticResource SubtleText}"
                           Text="A simple settings page to show navigation and MVVM binding."/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="16">
            <StackPanel>
                <TextBlock Text="Logging" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <CheckBox Content="Enable verbose logs" IsChecked="{Binding VerboseLoggingEnabled}" Margin="0,0,0,8"/>
                <TextBlock Text="Log file location:" Style="{StaticResource SubtleText}" Margin="0,12,0,2"/>
                <TextBox Text="{Binding LogFilePath}" IsReadOnly="True" Padding="8" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
